pipeline {
    agent {
        docker {
            image 'node:18'   // Node.js LTS image with npm pre-installed
        }
    }

    environment {
        SONAR_TOKEN = credentials('sonar-token')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('backend') {
                    sh """
                        npx sonar-scanner \
                          -Dsonar.projectKey=ecommerce-store \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://sonarqube:9000 \
                          -Dsonar.login=$SONAR_TOKEN
                    """
                }
            }
        }

        stage('Build') {
            steps {
                dir('backend') {
                    sh 'npm run build || echo "No build script, skipping..."'
                }
            }
        }

        stage('Test') {
            steps {
                dir('backend') {
                    sh 'npm test || echo "No tests defined, skipping..."'
                }
            }
        }
    }
}
