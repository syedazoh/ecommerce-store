pipeline {
    agent any

    environment {
        SONAR_AUTH_TOKEN = credentials('SONAR_AUTH_TOKEN')  // Jenkins credentials ID
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/syedazoh/ecommerce-store.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    dir('backend') {
                        sh 'npm install'
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQubeLocal') {   // must match Jenkins SonarQube config name
                        def scannerHome = tool 'sonar-scanner'  // must match Global Tool name
                        dir('backend') {
                            sh """
                                ${scannerHome}/bin/sonar-scanner \
                                    -Dsonar.projectKey=ecommerce-store \
                                    -Dsonar.sources=. \
                                    -Dsonar.host.url=http://localhost:9000 \
                                    -Dsonar.login=${SONAR_AUTH_TOKEN}
                            """
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t ecommerce-store:latest ./backend'
                }
            }
        }
    }
}
