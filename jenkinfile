pipeline {
    agent any

    tools {
        nodejs 'nodejs'   // Make sure NodeJS tool is configured in Jenkins global tools
    }

    environment {
        SONARQUBE_SERVER = 'SonarQubeLocal'         // Update this if your SonarQube server in Jenkins has a different name
        SONAR_AUTH_TOKEN = credentials('sonar-token') // Uses your secret text
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/syedazoh/ecommerce-store.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    dir('backend') {
                        sh """
                            sonar-scanner \
                              -Dsonar.projectKey=ecommerce-store \
                              -Dsonar.sources=. \
                              -Dsonar.host.url=http://localhost:9000 \
                              -Dsonar.login=${SONAR_AUTH_TOKEN}
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('backend') {
                    sh 'docker build -t ecommerce-store-backend:latest .'
                }
            }
        }
    }
}
