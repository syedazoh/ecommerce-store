pipeline {
    agent {
        docker {
            image 'node:18'    // run everything inside Node.js 18 container
            args '-u root:root' // allow installing packages
        }
    }

    environment {
        SONAR_TOKEN = credentials('sonar-token') // SonarQube token
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo '✅ Code checked out'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
                echo '✅ Dependencies installed'
            }
        }

        stage('Build') {
            steps {
                dir('backend') {
                    sh 'npm run build || echo "⚠️ No build script defined"'
                }
            }
        }

        stage('Test') {
            steps {
                dir('backend') {
                    sh 'npm test || echo "⚠️ No tests defined"'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    dir('backend') {
                        sh '''
                            npx sonar-scanner \
                              -Dsonar.projectKey=ecommerce-store \
                              -Dsonar.sources=. \
                              -Dsonar.host.url=$SONAR_HOST_URL \
                              -Dsonar.login=$SONAR_TOKEN
                        '''
                    }
                }
            }
        }
    }
}
