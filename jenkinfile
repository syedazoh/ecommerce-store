pipeline {
    agent any

    tools {
        nodejs 'nodejs'
    }

    environment {
        SONARQUBE_URL = 'http://sonarqube:9000'  // update if using different host/port
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/syedazoh/ecommerce-store.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
                    dir('backend') {
                        sh """
                            npx sonar-scanner \
                              -Dsonar.projectKey=ecommerce-store \
                              -Dsonar.sources=. \
                              -Dsonar.host.url=$SONARQUBE_URL \
                              -Dsonar.login=$SONAR_TOKEN
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('backend') {
                    sh 'docker build -t ecommerce-store-backend:latest .'
                }
            }
        }
    }
}
