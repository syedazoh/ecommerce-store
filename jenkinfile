pipeline {
    agent any

    tools {
        nodejs 'nodejs'                           // NodeJS tool installed in Jenkins
        hudson.plugins.sonar.SonarRunnerInstallation 'sonar-scanner'  
        // ^ must match the name you gave SonarScanner in Global Tool Configuration
    }

    environment {
        SONARQUBE_SERVER = 'SonarQubeLocal'       // must match your SonarQube server config
        SONAR_AUTH_TOKEN = credentials('sonar-token')  
        // store your token in Jenkins credentials with ID "sonar-token"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/syedazoh/ecommerce-store.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    dir('backend') {
                        sh """
                            sonar-scanner \
                              -Dsonar.projectKey=ecommerce-store \
                              -Dsonar.sources=. \
                              -Dsonar.host.url=http://localhost:9000 \
                              -Dsonar.login=${SONAR_AUTH_TOKEN}
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('backend') {
                    sh 'docker build -t ecommerce-store-backend:latest .'
                }
            }
        }
    }
}



